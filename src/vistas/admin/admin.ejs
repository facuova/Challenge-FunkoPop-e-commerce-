<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') -%>
    <title>Admin</title>
    
</head>
<%- include('../partials/header') %>
<main id="admin" class="container">
  <section class="admin-buscar">
        <div>
            <img  src="./img/icons/search_icon.svg" alt="Ícono de lupa">
        </div>
        <input class="admin-buscar-barra" type="text" name="search" id="search" placeholder="código, nombre o categoria">
  </section>
  <section class="admin-lista">
      <div class="admin-header">
            <h2>LISTADO DE PRODUCTOS</h2>
            <span>AGREGAR
                <a href="/admin/create">
                    <div>
                        <img src="./img/icons/plus_fill.svg"  alt="Ícono de agregar">
                    </div>    
                </a>
            </span>
      </div>
      <div class="admin-table">
          <header class="admin-table-header">
              <h3>ID</h3>
              <h3>Código</h3>
              <h3>Nombre del Producto</h3>
              <h3>Categoría</h3>
          </header>
          <% items.forEach(item => { %>
            <article class="admin-table-row">
                <p><%= item.product_id %></p>
                <p><%= item.sku %></p>
                <p><%= item.product_name %></p>
                <p><%= item.category_name %></p>
                <a href="/admin/edit/<%= item.product_id %>">
                    <img src="./img/icons/edit_pencil.svg"  alt="Ícono de editar">
                </a>
                <form action="/admin/delete/<%= item.product_id %>?_method=DELETE" method="POST">
                    <button class="admin-table__btn-delete" type="submit">
                        <img src="./img/icons/delete_trash.svg"  alt="Ícono de eliminar">
                    </button>
                </form>
            </article>
          <% }); %>
      </div>
  </section>
</main>
<%- include('../partials/footer') %>